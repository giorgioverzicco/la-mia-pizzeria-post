@model List<Pizza>

@{
}

<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @if (Model.Count > 0)
    {
      @foreach (Pizza pizza in Model)
      {
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

            <div class="card-body">
              <h4 class="card-title">@pizza.Name</h4>
              <p class="card-text">@pizza.Description</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-muted">@pizza.Price.ToString("C")</small>
              </div>
            </div>
          </div>
        </div>
      }
    }
    else
    {
      <div class="text-center">
        <p class="fs-3"> <span class="text-danger">We're sorry!</span> No pizzas in the list.</p>
      </div>
    }
  </div>
</div>
